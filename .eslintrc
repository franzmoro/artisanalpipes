{
  "plugins": ["riot"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
  },
  "extends": "eslint:recommended",
  "globals": {
    "riot": true,
    "opts": true,
  },
  "env": {
    "node": true
  },
  "rules": {
    "comma-dangle": 1,
    "semi": [2, "always"],
    "strict": 0,
    "no-param-reassign": [2, {"props": false}],
    "no-console": 0,
    "no-extra-semi": 2,
    "no-unreachable": 1,
    "no-unused-vars": [2, {"args": "after-used", "argsIgnorePattern": "^_"}]
  }
}
